<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="10px"
    android:background="#eee"
    tools:context="com.syd.mystudydemo.activity.MainActivity">
    <!--公共按钮，负责跳转到相应的training页面-->
    <TextView
        style="@style/activity_main_text"
        android:id="@+id/tv_next_surface"
        android:text="@string/text_surface"/>
    <!--公共按钮，负责跳转到相应的training页面-->
    <LinearLayout
        android:orientation="vertical"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="51dp">
        <TextView
            style="@style/activity_main_text_1"
            android:id="@+id/tv_to_activity_first"
            android:background="@color/colorAccent"
            android:text="@string/text_process"/>
    </LinearLayout>


    <TextView
        android:id="@+id/tv_next_inputmanager"
        style="@style/activity_main_text"
        android:text="@string/text_input"/>


    <TextView
        android:id="@+id/tv_next_eventbus"
        style="@style/activity_main_text"
        android:text="@string/text_eventbus"/>
    <!---->
    <TextView
        android:id="@+id/tv_next_focus"
        style="@style/activity_main_text"
        android:text="@string/text_focus"/>

    <TextView
        android:id="@+id/tv_next_progressbar"
        style="@style/activity_main_text"
        android:text="@string/text_progressbar"/>

    <TextView
        android:id="@+id/tv_next_shadow"
        style="@style/activity_main_text"
        android:text="@string/text_progressbar"/>
    <TextView
        android:background="#ff0000"
        android:layout_width="360dp"
        android:layout_height="20dp"/>

    <TextView
        android:background="#ff0000"
        android:layout_width="160dp"
        android:layout_height="160dp"/>
</LinearLayout>
